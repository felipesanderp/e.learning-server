// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Courses {
  id          String  @id
  title       String  @unique
  slug        String? @unique
  description String
  imageURL    String

  isAvailable Boolean? @default(true)

  canceledAt DateTime?
  createdAt  DateTime  @default(now())
}
